import java.util.Scanner;
class series
{    
public static void main(String args[])   
{        
Scanner sc=new Scanner(System.in);        
int a,i,j,sum=0,f=1;        
System.out.println("last digit: ");
a=sc.nextInt();                       
for ( i = 1; i <= a; i++)
{f=1;
for ( j = 1; j <= i; j++)
{
if (i%2==0)
{
f=f*j;
}
}
if (i%2==0)
{
sum=sum+f;   
}
}
System.out.println(sum);
}}
